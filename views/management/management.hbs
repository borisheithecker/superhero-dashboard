{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/events/events.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/management.js" type="text/javascript" defer></script>

    {{/content}}

    {{#content "page"}}
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 no-padding">
                    <h5>Releases</h5>
                    <a href="/management/releases" class="btn btn-primary ajax-link" data-success-message="Releases erfolgreich gefetched.">Releases fetchen</a>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 no-padding">
                    <h5>Timelines</h5>
                    {{> "lib/components/table" head=timelines.head body=timelines.body}}
                </div>
            </div>
        </div>

        {{#embed "lib/components/modal-form" roles=roles method="patch" class="edit-modal"}}
            {{#content "fields"}}
                <div class="form-group">
                    <label class="control-label" for="name">Titel (ACHTUNG, wird zur Identifikation im Code genutzt!)</label>
                    <input type="text" name="title" id="name" class="form-control" placeholder="about" required>
                </div>
                <div class="form-group">
                    <label class="control-label" for="name">JSON fetch URL</label>
                    <input type="text" name="fetchUrl" id="name" class="form-control" placeholder="https://spreadsheets.google.com/feeds/list/[id]/1/public/values?alt=json" required>
                </div>
                <div class="form-group">
                    <label class="control-label" for="name">Dokumenten URL</label>
                    <input type="text" name="documentUrl" id="name" class="form-control" placeholder="https://docs.google.com/spreadsheets/d/[id]/edit" required>
                </div>
            {{/content}}
        {{/embed}}
    {{/content}}
{{/extend}}
