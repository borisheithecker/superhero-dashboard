{{#extend "lib/default"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/login.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/login.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "body"}}
        <div class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <hgroup class="huge-gap">
                        <h3>SuperHero-Dashboard <sup>ALPHA</sup></h3>
                    </hgroup>

                    <div class="form-wrapper">
                        {{> "lib/components/notification"}}
                        <h4 class="center-text">SuperHero-Login</h4>
                        <form method="post" action="/login/" class="login-form">
                            <div class="form-group">
                                <input type="text" name="email" class="form-control form-control-lg" placeholder="Email-Adresse" required>
                                <input type="password" name="password" class="form-control form-control-lg" placeholder="Passwort" required>
                            </div>

                            <div class="form-group">
                                <input type="submit" class="btn btn-block btn-primary btn-login" value="Anmelden" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

        {{#embed "lib/components/modal-form" action="/pwrecovery/" method="post" class="pwrecovery-modal"}}
            {{#content "fields"}}
                {{> "authentication/forms/pwrecovery"}}
            {{/content}}
        {{/embed}}


    {{/content}}
{{/extend}}
